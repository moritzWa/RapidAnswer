{
  "name": "rapidanswer",
  "version": "1.0.0",
  "description": "Voice chat app with real-time transcription and AI responses",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && ./venv/bin/python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build:client": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install && cd ../server && python3 -m venv venv && ./venv/bin/pip install -r requirements.txt"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@nozbe/watermelondb": "^0.28.0",
    "lokijs": "^1.5.12"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.28.0"
  }
}
